{
  "functions": {
    "api/generate-puzzle.js": { "maxDuration": 30 },
    "api/analyzeIncorrectMove.js": { "maxDuration": 15 },
    "api/analyzeIncorrectMoveStockfish.js": { "maxDuration": 15 },
    "api/analyzeMoveConsequencesStockfish.js": { "maxDuration": 20 },
    "api/analyzeIncorrectMoveStockfishEnhanced.js": { "maxDuration": 25 }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cross-Origin-Embedder-Policy", "value": "require-corp" },
        { "key": "Cross-Origin-Opener-Policy", "value": "same-origin" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/stockfish-17-lite-single.js",
      "destination": "/stockfish-17-lite-single.js"
    },
    {
      "source": "/stockfish-17-lite-single.wasm", 
      "destination": "/stockfish-17-lite-single.wasm"
    }
